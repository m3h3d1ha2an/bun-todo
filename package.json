{
	"name": "bun-hono-drizzle-betterauth",
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"lint": "biome lint --write",
		"fmt": "biome format --write",
		"fix": "biome check --write",
		"tsc": "tsc --noEmit",
		"db:push": "drizzle-kit push",
		"db:gen": "drizzle-kit generate",
		"db:mig": "drizzle-kit migrate",
		"db:up": "docker compose up -d",
		"db:down": "docker compose down",
		"db:logs": "docker logs -f db-bhdb",
		"auth:sync": "bun --bun better-auth generate --config ./src/auth/index.ts --output ./src/db/schema/auth.ts",
		"auth:secret": "bun --bun better-auth secret"
	},
	"dependencies": {
		"better-auth": "^1.4.18",
		"drizzle-orm": "^0.45.1",
		"drizzle-seed": "^0.3.1",
		"hono": "^4.11.8",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@better-auth/cli": "^1.4.18",
		"@biomejs/biome": "2.3.14",
		"@types/bun": "latest",
		"drizzle-kit": "^0.31.8"
	}
}
